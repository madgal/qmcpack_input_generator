<?xml version="1.0"?>
<simulation>
  <project id="Opt-something" series="1"/>
  <!-- input from quantum package converter -->
  <include href="this.ptcl.xml"/>
  <include href="this.wfs.xml"/>
  <!--  Hamiltonian -->
  <hamiltonian name="h0" type="generic" target="e">
    <pairpot name="PseudoPot" type="pseudo" source="ion0" wavefunction="psi0" format="xml">
    </pairpot>
    <constant name="IonIon" type="coulomb" source="ion0" target="ion0"/>
    <pairpot name="ElecElec" type="coulomb" source="e" target="e" physical="true"/>
  </hamiltonian>



 <init source="ion0" target="e"/>
  <qmc method="vmc" move="pbyp" checkpoint="-1" gpu="yes">
    <estimator name="LocalEnergy" hdf5="no"/>
    <parameter name="walkers">   1</parameter>
    <parameter name="step">    1</parameter>
    <parameter name="substeps">  5 </parameter>
    <parameter name="warmupSteps">  10 </parameter>
    <parameter name="blocks"> 50</parameter>
    <parameter name="timestep">  0.5 </parameter>
    <parameter name="usedrift">   no </parameter>
  </qmc>

<loop max="2">
  <qmc method="linear" move="pbyp" checkpoint="-1" gpu="yes">
    <parameter name="blocks"> 20</parameter>
    <parameter name="warmupSteps">  40</parameter>
    <parameter name="substeps">  20 </parameter>
    <parameter name="timestep">  0.5 </parameter>
    <parameter name="walkers">   1</parameter>
    <parameter name="minwalkers">  0.001 </parameter>
    <parameter name="usedrift">   no </parameter>
    <estimator name="LocalEnergy" hdf5="no"/>
    <cost name="energy">                   0.9 </cost>
    <cost name="unreweightedvariance">     0.0 </cost>
    <cost name="reweightedvariance">       0.1 </cost>
    <parameter name="MinMethod">OneShiftOnly</parameter>
    <parameter name="nonlocalpp">yes</parameter>
    <parameter name="useBuffer">no</parameter>
  </qmc>
</loop>
<loop max="40">
  <qmc method="linear" move="pbyp" checkpoint="-1" gpu="yes">
    <parameter name="blocks"> 40</parameter>
    <parameter name="warmupSteps">  40</parameter>
    <parameter name="substeps">  20 </parameter>
    <parameter name="timestep">  0.5 </parameter>
    <parameter name="walkers">   1</parameter>
    <parameter name="minwalkers">  0.5 </parameter>
    <parameter name="usedrift">   no </parameter>
    <estimator name="LocalEnergy" hdf5="no"/>
    <cost name="energy">                   0.9 </cost>
    <cost name="unreweightedvariance">     0.0 </cost>
    <cost name="reweightedvariance">       0.1 </cost>
    <parameter name="MinMethod">OneShiftOnly</parameter>
    <parameter name="nonlocalpp">yes</parameter>
    <parameter name="useBuffer">no</parameter>
    <parameter name="shift_i"> 0.1</parameter>
  </qmc>
</loop>
</simulation>
